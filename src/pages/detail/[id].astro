---
import '../../styles/global.css';
import type { Root } from '../../shared/types';
export const prerender = false;
const { id } = Astro.params;

let vehicleDetail: Root | undefined;
let errors: string[] = [];
try {
  const response = await fetch(`https://www.dasweltauto.at/api/locales/de_AT/vehicles/${id}/detail`);
  if (response.ok) {
    vehicleDetail = await response.json();
  } else {
    errors.push('Fahrzeug nicht gefunden');
  }
} catch (error) {
  errors.push('Fehler beim Laden der Fahrzeugdaten');
}
---

<h1 class="text-3xl font-bold mb-8 text-center text-blue-900 tracking-wide uppercase">Fahrzeugdetails</h1>
{errors.length > 0 || !vehicleDetail ? (
  errors.map((error) => (
    <div class="text-red-500">{error}</div>
  ))
) : (
  <div class="bg-gradient-to-br from-blue-100 via-white to-blue-50 rounded-lg shadow-lg p-6 grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto mt-8 border-2 border-blue-200">
    <div>
      <img src={vehicleDetail.overview.imageUrls[0] + '/1020'} alt={vehicleDetail.overview.header} class="rounded-lg shadow mb-6 w-full max-w-xl mx-auto border-4 border-blue-200 bg-white" />
      <div class="flex flex-wrap gap-2 mb-4">
        {vehicleDetail.overview.imageUrls.slice(1, 5).map((url, i) => (
          <img src={url + '/220'} alt={vehicleDetail.overview.header + ' Bild ' + (i+2)} class="w-24 h-16 object-cover rounded border-2 border-blue-100 bg-white" />
        ))}
      </div>
    </div>
    <div class="flex flex-col justify-between">
      <div>
        <h2 class="text-3xl font-bold mb-2 text-blue-800">{vehicleDetail.overview.header}</h2>
        <h3 class="text-lg text-blue-600 mb-4">{vehicleDetail.overview.subHeader}</h3>
        <div class="text-2xl text-blue-700 font-semibold mb-2 bg-blue-50 px-2 py-1 rounded inline-block shadow-sm">{vehicleDetail.overview.price.toLocaleString('de-AT', { style: 'currency', currency: 'EUR' })}</div>
        <div class="mb-4 text-sm text-blue-400">inkl. MwSt. & Überführung</div>
        <div class="grid grid-cols-2 gap-x-4 gap-y-2 mb-6">
          <div><span class="font-semibold text-blue-900">Modell:</span> {vehicleDetail.overview.model}</div>
          <div><span class="font-semibold text-blue-900">Erstzulassung:</span> {vehicleDetail.overview.initialRegistrationDate}</div>
          <div><span class="font-semibold text-blue-900">Kilometerstand:</span> {vehicleDetail.overview.mileage.toLocaleString()} km</div>
          <div><span class="font-semibold text-blue-900">Leistung:</span> {vehicleDetail.overview.powerKw} kW / {vehicleDetail.overview.powerPs} PS</div>
          <div><span class="font-semibold text-blue-900">Getriebe:</span> {vehicleDetail.technicalData.gearTypeText}</div>
          <div><span class="font-semibold text-blue-900">Kraftstoff:</span> {vehicleDetail.technicalData.fuelText}</div>
          <div><span class="font-semibold text-blue-900">Farbe:</span> {vehicleDetail.technicalData.colorText}</div>
          <div><span class="font-semibold text-blue-900">Sitze:</span> {vehicleDetail.technicalData.seats}</div>
          <div><span class="font-semibold text-blue-900">Türen:</span> {vehicleDetail.technicalData.doors}</div>
          <div><span class="font-semibold text-blue-900">CO₂-Emission:</span> {vehicleDetail.technicalData.co2Emission} g/km</div>
        </div>
        <h4 class="text-xl font-semibold mb-2 mt-6 text-blue-800">Ausstattung</h4>
        <ul class="list-disc ml-6 mb-4 text-blue-800 text-sm max-h-40 overflow-y-auto pr-2">
          {vehicleDetail.equipment.used.map((item) => (
            <li class="hover:text-blue-600 transition">{item.text}</li>
          ))}
        </ul>
      </div>
      <div class="bg-blue-50 rounded-lg p-4 mt-6 border border-blue-200">
        <h4 class="text-lg font-semibold mb-2 text-blue-800">Standort</h4>
        <p class="mb-1 text-blue-900">{vehicleDetail.overview.vehicleLocation.name}</p>
        <p class="mb-1 text-blue-900">{vehicleDetail.overview.vehicleLocation.street}</p>
        <p class="mb-1 text-blue-900">{vehicleDetail.overview.vehicleLocation.postalCode} {vehicleDetail.overview.vehicleLocation.city}</p>
        <h4 class="text-lg font-semibold mt-4 mb-2 text-blue-800">Händler</h4>
        <p class="mb-1 text-blue-900"><span class="font-semibold">Bewertung:</span> {vehicleDetail.overview.dealerRatingAverage} / 5 ({vehicleDetail.overview.dealerRatings} Bewertungen)</p>
        <p class="mb-1 text-blue-900"><span class="font-semibold">Telefon:</span> {vehicleDetail.overview.dealerPhoneNumber}</p>
        <a class="text-blue-700 underline hover:text-blue-900" href={vehicleDetail.overview.dealerRatingUrl} target="_blank">Händlerbewertungen ansehen</a>
      </div>
      <button class="mt-8 w-full bg-gradient-to-r from-blue-700 to-blue-400 hover:from-blue-800 hover:to-blue-500 text-white font-bold py-3 px-6 rounded-lg text-xl shadow transition">Fahrzeug anfragen</button>
    </div>
  </div>
)}
